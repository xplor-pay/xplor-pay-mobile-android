<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:padding="@dimen/numeric_key_pad_outline">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/numpad_1"
        style="@style/NumericKeyPadButtonStyleTopLeft"
        android:layout_marginEnd="@dimen/numeric_key_pad_outline"
        android:text="@string/numpad_key_1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/numpad_2"
        style="@style/NumericKeyPadButtonStyle"
        android:layout_marginEnd="@dimen/numeric_key_pad_outline"
        android:text="@string/numpad_key_2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/numpad_3"
        style="@style/NumericKeyPadButtonStyleTopRight"
        android:text="@string/numpad_key_3" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/numpad_4"
        style="@style/NumericKeyPadButtonStyle"
        android:layout_marginTop="@dimen/numeric_key_pad_outline"
        android:layout_marginEnd="@dimen/numeric_key_pad_outline"
        android:text="@string/numpad_key_4" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/numpad_5"
        style="@style/NumericKeyPadButtonStyle"
        android:layout_marginTop="@dimen/numeric_key_pad_outline"
        android:layout_marginEnd="@dimen/numeric_key_pad_outline"
        android:text="@string/numpad_key_5" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/numpad_6"
        style="@style/NumericKeyPadButtonStyle"
        android:layout_marginTop="@dimen/numeric_key_pad_outline"
        android:text="@string/numpad_key_6" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/numpad_7"
        style="@style/NumericKeyPadButtonStyle"
        android:layout_marginTop="@dimen/numeric_key_pad_outline"
        android:layout_marginEnd="@dimen/numeric_key_pad_outline"
        android:text="@string/numpad_key_7" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/numpad_8"
        style="@style/NumericKeyPadButtonStyle"
        android:layout_marginTop="@dimen/numeric_key_pad_outline"
        android:layout_marginEnd="@dimen/numeric_key_pad_outline"
        android:text="@string/numpad_key_8" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/numpad_9"
        style="@style/NumericKeyPadButtonStyle"
        android:layout_marginTop="@dimen/numeric_key_pad_outline"
        android:text="@string/numpad_key_9" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/numpad_backspace"
        style="@style/NumericKeyPadButtonStyleBottomLeft"
        android:layout_marginTop="@dimen/numeric_key_pad_outline"
        android:layout_marginEnd="@dimen/numeric_key_pad_outline"
        app:icon="@drawable/backspace"
        app:iconGravity="textStart"
        app:iconSize="20dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/numpad_0"
        style="@style/NumericKeyPadButtonStyle"
        android:layout_marginTop="@dimen/numeric_key_pad_outline"
        android:layout_marginEnd="@dimen/numeric_key_pad_outline"
        android:text="@string/numpad_key_0" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/numpad_clear"
        style="@style/NumericKeyPadButtonStyleBottomRight"
        android:layout_marginTop="@dimen/numeric_key_pad_outline"
        android:text="@string/numpad_key_clear" />

</GridLayout>