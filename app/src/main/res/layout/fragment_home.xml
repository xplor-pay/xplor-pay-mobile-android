<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/hints_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:id="@+id/current_reader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/first_reader"
            style="@style/ShapeAppearanceOverlay.Button.RoundedTransparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_extra_small"
            android:layout_marginEnd="@dimen/margin_extra_small"
            android:paddingStart="@dimen/margin_large"
            android:paddingEnd="@dimen/margin_large"
            android:text="@string/first_reader_button_text"
            android:visibility="gone" />

        <include
            android:id="@+id/reader_info"
            layout="@layout/reader_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </FrameLayout>

    <TextView
        android:id="@+id/offline_mode_enabled"
        style="@style/TextSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:drawablePadding="@dimen/margin_extra_small"
        android:textColor="@color/offline_mode_warning"
        app:drawableStartCompat="@drawable/ic_warning_small"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/current_reader"
        tools:text="Offline mode (0)" />

    <TextView
        android:id="@+id/no_eligible_terminal"
        style="@style/TextWarningSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:drawablePadding="@dimen/padding_xxsmall"
        android:text="@string/no_eligible_terminal_warning"
        app:drawableStartCompat="@drawable/ic_error"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/offline_mode_enabled" />

    <TextView
        android:id="@+id/charge_amount_text"
        style="@style/TextBoldLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/no_eligible_terminal"
        tools:text="$20.00" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/payment_method_layout"
        android:layout_width="@dimen/numpad_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_medium"
        android:weightSum="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/charge_amount_text">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/card_reader_button"
            style="@style/PaymentMethodButtonLeft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/payment_method_reader" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/manual_entry_button"
            style="@style/PaymentMethodButtonRight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/payment_method_manual" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <include
        android:id="@+id/numpad"
        layout="@layout/numeric_key_pad"
        android:layout_width="@dimen/numpad_width"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_medium_small"
        android:layout_marginEnd="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium"
        app:layout_constraintBottom_toTopOf="@id/charge_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/payment_method_layout" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/charge_button"
        style="@style/ChargeButton"
        android:layout_width="@dimen/numpad_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium_big"
        android:layout_marginEnd="@dimen/margin_medium_big"
        android:layout_marginBottom="@dimen/margin_medium_big"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="Charge $20.00" />

</androidx.constraintlayout.widget.ConstraintLayout>