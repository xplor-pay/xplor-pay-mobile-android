<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/batch_card"
    android:background="@drawable/bg_transaction_card"
    android:paddingVertical="@dimen/margin_medium_big"
    android:paddingTop="40dp"
    android:paddingBottom="40dp" >

    <TextView
        android:id="@+id/batch_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium"
        android:fontFamily="@font/sf_pro_text_bold"
        android:text="#447"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/batch_transaction_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium"
        android:fontFamily="@font/sf_pro_text_bold"
        android:text="Total Transactions: 11"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/batch_number" />

    <TextView
        android:id="@+id/batch_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_text_bold"
        android:text="Open"
        android:textColor="#000000"
        android:textSize="14sp"
        android:layout_marginEnd="@dimen/margin_medium"
        android:background="@drawable/bg_pill_purple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/batch_sales_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginStart="@dimen/margin_medium"
        android:text="Sales (10)"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/batch_transaction_total" />

    <TextView
        android:id="@+id/batch_sales_total_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_medium"
        android:text="$100.00"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/batch_transaction_total" />

    <TextView
        android:id="@+id/batch_refund_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_xsmall"
        android:layout_marginStart="@dimen/margin_medium"
        android:text="Refunds (1)"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/batch_sales_total" />

    <TextView
        android:id="@+id/batch_refund_total_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_xsmall"
        android:layout_marginEnd="@dimen/margin_medium"
        android:text="-$20.00"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/batch_sales_total_amount" />

    <ImageView
        android:id="@+id/batch_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_divider"
        app:layout_constraintTop_toBottomOf="@id/batch_refund_total_amount" />

    <TextView
        android:id="@+id/batch_net_amount_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_xsmall"
        android:layout_marginStart="@dimen/margin_medium"
        android:fontFamily="@font/sf_pro_text_bold"
        android:text="Net Amount"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/batch_divider" />

    <TextView
        android:id="@+id/batch_net_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_xsmall"
        android:layout_marginEnd="@dimen/margin_medium"
        android:text="$80.00"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/batch_divider" />

</androidx.constraintlayout.widget.ConstraintLayout>